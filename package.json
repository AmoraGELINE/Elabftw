{
  "name": "elabftw",
  "description": "Free and open source electronic lab notebook for research labs",
  "main": "Gruntfile.js",
  "directories": {
    "test": "tests"
  },
  "dependencies": {
    "@fancyapps/fancybox": "^3.2.5",
    "@fortawesome/fontawesome": "^1.1.5",
    "@fortawesome/fontawesome-free-brands": "^5.0.9",
    "@fortawesome/fontawesome-free-regular": "^5.0.9",
    "@fortawesome/fontawesome-free-solid": "^5.0.9",
    "bootstrap": "^4.1.0",
    "bootstrap-markdown-fa5": "^2.10.0",
    "dropzone": "^5.4.0",
    "file-saver": "^1.3.7",
    "fullcalendar": "3.9.0",
    "grunt-contrib-uglify-es": "gruntjs/grunt-contrib-uglify#harmony",
    "jquery": "^3.3.1",
    "jquery-jeditable": "2.0.2",
    "jquery-ui-dist": "^1.12.1",
    "jquery.complexify": "^0.5.2",
    "keypress.js": "^2.1.5",
    "markdown": "^0.5.0",
    "popper.js": "^1.14",
    "tinymce": "^4.7",
    "tinymce-mention": "^4.0.2",
    "vanderlee-colorpicker": "^1.2.16"
  },
  "devDependencies": {
    "apidoc": "^0.17.6",
    "expose-loader": "^0.7.5",
    "grunt": "^1.0.2",
    "grunt-contrib-cssmin": "^2.2.1",
    "grunt-contrib-uglify": "gruntjs/grunt-contrib-uglify#harmony",
    "grunt-contrib-watch": "^1.0.0",
    "grunt-shell": "^2.1.0",
    "lodash": "^4.17.5",
    "snyk": "^1.70",
    "webpack": "^4.5",
    "webpack-cli": "^2.0"
  },
  "scripts": {
    "apidoc": "apidoc -o _apidoc -i src/classes",
    "build": "webpack-cli --config builder.js",
    "buildall": "grunt && webpack-cli --config builder.js",
    "coverage": "php vendor/bin/codecept run --skip acceptance --skip functionnal --coverage --coverage-html",
    "srcdoc": "phpDocumentor run -d src/classes -d src/models -d web/app/controllers -d src/views -t _srcdoc",
    "test": "docker run --rm --name selenium -d --net=host selenium/standalone-chrome && php vendor/bin/codecept run --skip functionnal; cp -fn config.php.docker web/config.php; docker stop selenium",
    "unit": "php vendor/bin/codecept run unit",
    "vulns": "snyk test"
  },
  "repository": "git+https://github.com/elabftw/elabftw.git",
  "author": "Nicolas CARPi",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/elabftw/elabftw/issues"
  },
  "homepage": "https://www.elabftw.net"
}
